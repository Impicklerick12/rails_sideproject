<div class="container">
  <div class="form">
    <%= form_with(model: @polaroid, local: true) do |form| %>

      <%= form.label :title %>

      <div class="field">
        <div class="control">
          <input class="input is-primary" type="text" placeholder="Title" <%= form.text_field :title %>
        </div>
      </div>

      <%= form.label :image %>
      <div id="file-js-example" class="file has-name is-fullwidth">
        <label class="file-label">
          <input class="file-input" type="file" <%= form.file_field :image %>
            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Choose a fileâ€¦
              </span>
            </span>
            <span class="file-name">
              No file uploaded
            </span>
        </label>
      </div>
      <script>
        const fileInput = document.querySelector('#file-js-example input[type=file]');
        fileInput.onchange = () => {
          if (fileInput.files.length > 0) {
            const fileName = document.querySelector('#file-js-example .file-name');
            fileName.textContent = fileInput.files[0].name;
          }
        }
      </script>

      <%= form.label :comment %>
      <div class="field">
        <div class="control">
          <textarea class="textarea is-primary" placeholder="Comment" <%= form.text_field :comment %></textarea>
        </div>
      </div>

      <div class="actions">
        <button class="button is-danger"><%= form.submit %></button>
      </div>

    <% end %>
  </div>
</div>