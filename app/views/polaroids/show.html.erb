<p id="notice"><%= notice %></p>

<div class="container is-fluid">
    <div class="card">

      <div class="card-image">
            <%= image_tag(@polaroid.image, style:"width:100%") %>
      </div>

      <div class="polaroid-content">
        <div class="card-content">

          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= @polaroid.title %></p>
            </div>
          </div>

          <div class="content">
          <%= @polaroid.comment %>
          </div>
        </div>

        <div class="card-footer">
          <div class="card-footer-item"><%= link_to 'Show', @polaroid %></div>
          <div class="card-footer-item"><%= link_to 'Edit', edit_polaroid_path(@polaroid) %></div>
          <div class="card-footer-item"><%= link_to 'Delete', @polaroid, method: :delete, data: { confirm: "Are you sure you want to delete this Polaroid?" } %></div>
        </div>
      </div>
    </div>
    <button class="button is-primary"><%= link_to 'Back', polaroids_path %></button>
</div>