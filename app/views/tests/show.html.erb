<p id="notice"><%= notice %></p>

<div class="container is-fluid">
    <div class="card">

      <div class="card-image">
        <%= image_tag(@test.image, style:"width:100%") %>
      </div>

      <div class="polaroid-content">
        <div class="card-content">

          <div class="media">
            <div class="media-content">
              <p class="title is-4"><%= @test.title %></p>
            </div>
          </div>

          <div class="content">
          <%= @test.comment %>
          </div>
        </div>

        <div class="card-footer">
          <div class="card-footer-item"><%= link_to 'Show', @test %></div>
          <div class="card-footer-item"><%= link_to 'Edit', edit_test_path(@test) %></div>
          <div class="card-footer-item"><%= link_to 'Delete', @test, method: :delete, data: { confirm: "Are you sure you want to delete this Polaroid?" } %></div>
        </div>
      </div>
      
    </div>
    <%= link_to 'Back', tests_path %>
</div>
